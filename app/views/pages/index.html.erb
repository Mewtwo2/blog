<h1>Welcome to Ted's Blog</h1>
<% if current_user %>
<%= link_to 'Profile', '/users/' + current_user.id.to_s %>
<% else %>
  <%= link_to 'Sign Up', users_new_path %>&emsp;
  <%= link_to 'Log In', login_path %>
<% end %>

<ul>
<% @posts.each do |post| %>
  <li><%= link_to post.title, '/posts/' + post.id.to_s %></li>
<% end %>
</ul>
