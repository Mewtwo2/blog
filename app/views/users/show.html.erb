<% if logged_in? && current_user.id == @user.id %>
  <h1><%= @user.email %></h1>
  <%= link_to 'Home', root_path, class: 'button' %>&emsp;
  <% if current_user.is_admin %>
    <%= link_to 'Make a new post', posts_new_path, class: 'button' %>&emsp;
  <% end %>
  <%= link_to 'Log Out', logout_path, method: :delete, class: 'button' %>
<% else %>
  <h1>Please log in</h1>
<% end %>
